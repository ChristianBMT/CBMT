generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Devotion {
  id    String @id @default(uuid())
  title String @unique

  author       String
  author_about String?

  verse_id    String?
  bible_verse String?

  content String  @unique
  prayer  String?

  docs String

  audio_file String?

  image String @default("/DailyImage.webp")

  weekNo       Int
  Week         Week           @relation(fields: [weekNo], references: [week])
  Devotion_Tag Devotion_Tag[]
}

model Tag {
  id           String         @id @default(uuid())
  name         String         @unique
  Devotion_Tag Devotion_Tag[]
}

model Devotion_Tag {
  devotion_id String
  tag_id      String
  tag         Tag       @relation(fields: [tag_id], references: [id])
  Devotion    Devotion? @relation(fields: [devotion_id], references: [id])

  @@id([devotion_id, tag_id])
}

model Week {
  week     Int        @id
  name     String     @default("hi")
  Devotion Devotion[]
}
